<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/my_linear_layout"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textModuleCode"
        android:text="Module Code"
        android:gravity="left|center"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Module Code :"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_alignBaseline="@+id/textModuleCode"
        android:layout_alignBottom="@+id/textModuleCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textStartTime"
        android:text="Start Time"
        android:gravity="left|center"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textModuleCode"
        android:layout_alignLeft="@+id/textModuleCode"
        android:layout_alignStart="@+id/textModuleCode"
        android:textSize="@dimen/activity_horizontal_margin" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="7dp"
        android:id="@+id/textFinishTime"
        android:text="Finish Time"
        android:gravity="left|center"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textModuleCode"
        android:layout_alignLeft="@+id/textModuleCode"
        android:layout_alignStart="@+id/textModuleCode"
        android:textSize="@dimen/activity_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Start Time :"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_alignTop="@+id/textStartTime"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Finish Time :"
        android:id="@+id/textView4"
        android:layout_marginBottom="7dp"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_alignTop="@+id/textFinishTime"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView"
        android:background="@drawable/delete"
        android:layout_alignTop="@+id/textModuleCode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp" />

    <TextView
        android:text="Shift Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView5"
        android:textColor="@android:color/black" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFinishTime"
        android:layout_alignLeft="@+id/textFinishTime"
        android:layout_alignStart="@+id/textFinishTime"
        android:id="@+id/textViewShiftDate"
        android:textColor="@android:color/black" />


</RelativeLayout>